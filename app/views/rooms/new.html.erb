<div class="min-h-screen bg-gray-100 flex items-center justify-center px-4">

  <div class="bg-white w-full max-w-md rounded-xl shadow-lg p-8">

    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">
    Create New Room
    </h1>

    <%= form_with model: @room, class: "space-y-5" do |f| %>

    <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>

        <%= f.text_field :name,
            class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none",
            placeholder: "Enter room name..." %>
    </div>

    <div class="flex justify-between items-center">

        <%= link_to "Cancel",
            root_path,
            class: "text-gray-500 hover:text-gray-700 font-medium" %>

        <%= f.submit "Create Room",
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-5 py-2 rounded-lg shadow transition cursor-pointer" %>

    </div>

    <% end %>

  </div>

</div>
